<?xml version="1.0"?>
<odoo>
  <record id="offer_record_form" model="ir.ui.view">
    <field name="name">offer.record.form</field>
    <field name="model">real.estate.offers</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="price"/>
            <field name="partner_id"/>
            <field name="validity"/>
            <field name="date_deadline"/>
            <field name="status"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
