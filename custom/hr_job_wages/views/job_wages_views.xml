<?xml version="1.0"?>
<odoo>
  <record id="wage_addition_to_contract" model="ir.ui.view">
    <field name="name">wage.addition.to.contract</field>
    <field name="model">hr.job</field>
    <field name="inherit_id" ref="hr.view_hr_job_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='no_of_recruitment']" position="after">
        <field name="minimum_wage" string="Minimum Wage"/>
        <field name="maximum_wage" string="Maximum Wage"/>
      </xpath>
    </field>
  </record>
</odoo>
